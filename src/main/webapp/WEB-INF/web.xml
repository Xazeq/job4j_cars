<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ru.job4j.filter.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>*.html</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.RegServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BrandServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.BrandServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.AdServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BodyServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.BodyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserAdsServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.UserAdsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BrandFilterServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.BrandFilterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TodayAdsServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.TodayAdsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DownloadPhotoServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.DownloadPhotoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UploadPhotoServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.UploadPhotoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CloseAdServlet</servlet-name>
    <servlet-class>ru.job4j.controllers.CloseAdServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegServlet</servlet-name>
    <url-pattern>/reg.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BrandServlet</servlet-name>
    <url-pattern>/brand.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BodyServlet</servlet-name>
    <url-pattern>/body.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdServlet</servlet-name>
    <url-pattern>/addAd.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserAdsServlet</servlet-name>
    <url-pattern>/userAds.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BrandFilterServlet</servlet-name>
    <url-pattern>/brandFilter.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TodayAdsServlet</servlet-name>
    <url-pattern>/todayAds.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DownloadPhotoServlet</servlet-name>
    <url-pattern>/download.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UploadPhotoServlet</servlet-name>
    <url-pattern>/upload.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CloseAdServlet</servlet-name>
    <url-pattern>/closeAd.do</url-pattern>
  </servlet-mapping>
</web-app>
